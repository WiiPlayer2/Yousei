<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <YarnBuildCommand>run tailwindcss build ./site.css -o ./wwwroot/css/site.generated.min.css</YarnBuildCommand>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="site.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BlazorMonaco" Version="2.0.0" />
    <PackageReference Include="GraphQL.Client" Version="3.2.2" />
    <PackageReference Include="GraphQL.Client.Serializer.Newtonsoft" Version="3.2.2" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.10.13" />
    <PackageReference Include="Yarn.MSBuild" Version="*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Yousei.Core\Yousei.Core.csproj" />
    <ProjectReference Include="..\Yousei.Shared\Yousei.Shared.csproj" />
  </ItemGroup>

  <Target Name="YarnInstall">
    <Yarn />
  </Target>
</Project>
